<p style="color: green"><%= notice %></p>

<h1>Трназакції</h1>

<div class="table-responsive">
  <table class="table">

  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Категорія</th>
      <th scope="col">Тип транзакції</th>
      <th scope="col">Сума</th>
      <th scope="col">Дата</th>
      <th scope="col">Опис</th>
      <th scope="col">Управління</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    <% @operations.each do |operation| %>
      <tr>
        <td> <%= operation.id %></td>
        <td> <%= operation.category.name %></td>
        <td> <%= operation.otype %></td>
        <td> <%= operation.amount %></td>
        <td> <%= operation.odate %></td>
        <td> <%= operation.description %></td>
        <td style="width:50px"><%= button_to "<i class=\"bi bi-pencil-square\"></i>".html_safe, edit_operation_path(operation), method: :get, class: "btn btn-outline-secondary" %></td>
       <td><%= button_to "<i class=\"bi bi-trash3\"></i>".html_safe, operation, method: :delete, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
    </tbody>

  </table>
</div>

<%= button_to "Створити транзакцію", new_operation_path, method: :get, class: "btn btn-outline-success" %>

<%= paginate @operations %>

